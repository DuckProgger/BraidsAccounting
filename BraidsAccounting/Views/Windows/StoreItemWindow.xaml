<Window x:Class="BraidsAccounting.Views.Windows.StoreItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BraidsAccounting.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:BraidsAccounting.ViewModels"  
        xmlns:prism="http://prismlibrary.com/" 
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="StoreItemWindow" Height="130" Width="400">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadAddItemViewCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <StackPanel>        
        <ContentControl prism:RegionManager.RegionName="StoreItemRegion" />
        <StackPanel Orientation="Horizontal">
            <Button Content="AddView" Command="{Binding NavigateToOtherViewCommand}" CommandParameter="AddStoreItemView"/>
            <Button Content="EditView" Command="{Binding NavigateToOtherViewCommand}" CommandParameter="EditStoreItemView"/>

        </StackPanel>
    </StackPanel>
</Window>
